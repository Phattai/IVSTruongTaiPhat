
@model  DTO.Item.ItemDTO
@{
    ViewBag.Title = "Add";
}

<h2>
    <span class="alert-warning">Add Item</span>
</h2>

@if (!string.IsNullOrEmpty((string)TempData["Error"]))
{
    <div id="error" class="error">
        @TempData["Error"]
    </div>
}

<div class="row container-design">
    @using (Html.BeginForm("AddItem", "Item", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="row">
            <div class="col-md-6 align-right">
                <div class="row">
                    <span class="required"> * </span> Item Name
                </div>
                <div class="row">
                    <div class="editor-field">
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.name)
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="row">
                    <span class="required"> * </span> Item Code
                </div>
                <div class="row">
                    <div class="editor-field">
                        @Html.TextBoxFor(m => m.code, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.code)
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6  align-right">
                <div class="row">
                    Specification

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.specification, new { @class = "form-control" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    Decription

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.description, new { @class = "form-control" })

                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-6 align-right">

                <div class="row">
                    Manufacture Size

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.manufacture_size, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <span class="required"> * </span> Category

                </div>
                <div class="row">
                    <div class="editor-field">
                        @Html.DropDownListFor(m => m.category_id, (SelectList)ViewBag.ListCategory, "Please select", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.category_id)
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-6 align-right">
                <div class="row">
                    <span class="required"> * </span> Discontinued Datetime

                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.EditorFor(model => model.discontinued_datetime, new { placeholder = "Enter Drop-off date here...", htmlAttributes = new { @class = "form-control date-picker", style = "width   500px" } })
                        <script type="text/javascript">
                            $(function () {
                                $('.date-picker').datepicker();
                            })
                        </script>
                        <div class="editor-field">
                            @Html.ValidationMessageFor(m => m.discontinued_datetime)
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    Inventory Measure

                </div>
                <div class="row">
                    @Html.DropDownListFor(m => m.inventory_measure_id, (SelectList)ViewBag.listMeasure, "Please select", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.inventory_measure_id)


                </div>

            </div>

        </div>
        <div class="row">
            <div class="col-md-6 align-right">
                <div class="row">
                    Inventory Expired

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.inventory_expired, new { @class = "form-control" })


                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    Inventory Standard Cost

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.inventory_standard_cost, new { @class = "form-control" })

                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6 align-right">
                <div class="row">
                    Inventory List Price

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.inventory_list_price, new { @class = "form-control" })


                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    Manufacture Day

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.manufacture_day, new { @class = "form-control" })

                </div>

            </div>

        </div>
        <div class="row">
            <div class="col-md-6 align-right">
                <div class="row">
                    Manufacture Size Measure

                </div>
                <div class="row">
                    @Html.DropDownListFor(m => m.manufacture_size_measure_id, (SelectList)ViewBag.listMeasure, "Please select", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.manufacture_size_measure_id)
                </div>
            </div>

            <div class="col-md-6">
                <div class="row">
                    Manufacture Weight

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.manufacture_weight, new { @class = "form-control" })


                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6 align-right">
                <div class="row">
                    Manufacture Weight Measure
                </div>
                <div class="row">
                    @Html.DropDownListFor(m => m.manufacture_weight_measure_id, (SelectList)ViewBag.listMeasure, "Please select", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.manufacture_weight_measure_id)
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    Manufacture Style

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.manufacture_style, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 align-right">
                <div class="row">
                    Manufacture Class

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.manufacture_class, new { @class = "form-control" })

                </div>

            </div>
            <div class="col-md-6">
                <div class="row">
                    Manufacture Color

                </div>
                <div class="row">
                    @Html.TextBoxFor(m => m.manufacture_color, new { @class = "form-control" })

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    @Html.CheckBoxFor(m => m.manufacture_make)
                    Manufacture Make

                </div>
                <div class="row">
                    @Html.CheckBoxFor(m => m.manufacture_tool)
                    Manufacture Tool
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    @Html.CheckBoxFor(m => m.manufacture_finished_goods)
                    Manufacture Finished Goods
                </div>
                <div class="row">
                    @Html.CheckBoxFor(model => model.dangerous)
                    Dangerous
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-success">Add Item</button>
            </div>
        </div>
    }
</div>